<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEFF4">


    <TextView
        android:id="@+id/text_clear"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="25dp"
        android:background="#3ACDFE"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="清除json"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toLeftOf="@id/close_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:background="#3ACDFE"
        android:gravity="center"
        android:padding="5dp"
        android:text="暂停"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/circumstances"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/circumstances"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:background="#3ACDFE"
        android:gravity="center"
        android:padding="5dp"
        android:text="pre-release"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:background="#3ACDFE"
        android:gravity="center"
        android:padding="5dp"
        android:text="拖动"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/close_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="#3ACDFE"
        android:gravity="center"
        android:padding="5dp"
        android:text="缩小"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toLeftOf="@id/text_hide_show"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_hide_show"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#3ACDFE"
        android:gravity="center"
        android:padding="5dp"
        android:text="全屏"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_clear" />

</androidx.constraintlayout.widget.ConstraintLayout>